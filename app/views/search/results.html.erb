<div>
    <table>
        <thead>
        <th>UUID</th>
        <th>Name</th>
        <th>Description</th>
        <th>&nbsp;</th>
        </thead>
        <% for project in @projects %>

            <tr>
                <td><%= link_to project.uuid, project_path(project.id) %></td>
                <td><%= project.name %></td>
                <td><%= project.description %></td>
            </tr>

        <% end %>
    </table>
</div>
<div>
    <a href=<%= new_project_path %>>New Project</a>
</div>