<%= form_for(@review) do |f| %>
    <% if @review.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

            <ul>
                <% @review.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :project_uuid %><br/>
        <%= f.collection_select(:project, Project.all, :id, :uuid, :prompt => true) %>
    </div>
    <div class="field">
        <%= f.label :reviewer %><br/>
        <%= f.collection_select(:reviewer, Reviewer.all, :id, :email, :prompt => true) %>
    </div>
    <div class="field">
        <%= f.label :status %><br/>
        <%= f.select :status %>
    </div>
    <div class="field">
        <%= f.label :comments %><br/>
        <%= f.text_field :comments %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
